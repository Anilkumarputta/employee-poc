generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  username     String  @unique
  passwordHash String
  role         String  @default("employee")
}

model Employee {
  id                  Int     @id @default(autoincrement())
  fullName            String
  className           String?
  attendancePercentage Float?
}